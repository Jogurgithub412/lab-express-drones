<h2>Update the drone</h2>

<form action="/drones/{{drone._id}}/edit" method="post">

  <label>Title:<input type="text" name="name" value="{{drone.title}}" /></label>
  <label>Propeller:<input
      type="number"
      name="propeller"
      value="{{drone.propeller}}"
    /></label>
  <label>Max Speed:<input
      type="number"
      name="maxSpeed"
      value="{{drone.maxSpeed}}"
    />
  </label>

  <button type="submit">Save Changes</button>
</form>